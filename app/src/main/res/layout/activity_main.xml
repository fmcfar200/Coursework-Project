<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <ImageButton
        android:id="@+id/incidentsButton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:src="@mipmap/ic_launcher_currentincidents"
        android:scaleType="fitXY"
        android:background="@color/white">


    </ImageButton>

    <ImageButton
        android:id="@+id/plannedRWButton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/incidentsButton"
        android:layout_alignStart="@+id/incidentsButton"
        android:src="@mipmap/ic_launcher_planned"
        android:scaleType="fitXY"
        android:background="@color/white"/>

</RelativeLayout>
